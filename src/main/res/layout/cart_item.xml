<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_product_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/item_cart_image"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_menu_camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_cart_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:textColor="@color/colorProductProperty"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_cart_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textColor="@color/colorProductName"
                android:textSize="18sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/item_cart_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/colorProductProperty"
            android:textSize="12sp" />

        <Button
            android:id="@+id/id_cart_remove"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:background="@color/colorProductName"
            android:text="Remove"
            android:textAllCaps="false"
            android:textColor="#FFFCFC"
            android:textSize="12sp" />


    </LinearLayout>
</LinearLayout>
