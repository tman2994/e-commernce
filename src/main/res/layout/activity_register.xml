<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Activities.RegisterActivity">

    <ImageView
        android:id="@+id/register_applogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_above="@+id/register_username_input"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="59dp"
        android:background="@drawable/snapchat2"
        android:layout_marginBottom="70dp" />

    <EditText
        android:id="@+id/register_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_Email_input"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/input_design"
        android:hint="Username"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#100F0F"
        android:textColorHint="#100F0F"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_Email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_password_input"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/input_design"
        android:hint="Email"
        android:inputType="textWebEmailAddress"
        android:padding="20dp"
        android:textColor="#100F0F"
        android:textColorHint="#100F0F"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="61dp"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_btn"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/input_design"
        android:hint="Password"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="#100F0F"
        android:textColorHint="#100F0F"
        android:textSize="17sp"
        android:textStyle="bold" />


</RelativeLayout>